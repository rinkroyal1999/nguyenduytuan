<div class="container-admin">
        {{> userMenu}}
        <div class="user-content">
            {{> userheader}}
            <div class="user-content-table">
                <div class="content-table-container">
                    <h1 class="content-table-container-header">
                        THÊM NHÀ
                    </h1>
                    <form action="" method="POST" enctype="multipart/form-data" > 
                        <div class="user-addHome">
                            {{!-- <h2 class="text-center mb-5 mt-2">ADD HOME</h2> --}}
                            <div class="form-group d-flex ">
                                <select name="category" class="form-control mr-4">
                                    {{#each categories}}
                                        <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                                <input class="form-control " type="text" name="nameHome" placeholder="Tên Nhà">
                                
                            </div>
                            <div class="form-group d-flex ">
                                <input class="form-control mr-4" type="number" min="1" max="5" name="bedroom" placeholder="Phòng ngủ">
                                <input class="form-control mr-4" type="number" min="1" max="5" name="livingroom" placeholder="Phòng khách">
                                <input class="form-control mr-4" type="number" min="1" max="5" name="bathroom" placeholder="Phòng vệ sinh">
                                <input class="form-control " type="number" min="50" max="500" name="acreage" placeholder="Diện tích">
                            </div>
                            <div class="form-group d-flex ">
                                <input class="form-control mr-4" type="text" name="adress" placeholder="250 Điện Biên Phủ">
                                <select name="district" class="form-control mr-4">                                   
                                        <option value="Hải Châu">Hải Châu</option>
                                        <option value="Thanh Khê">Thanh Khê</option>
                                        <option value="Sơn Trà">Sơn Trà</option>
                                        <option value="Cẩm Lệ">Cẩm Lệ</option>
                                        <option value="Ngũ Hành Sơn">Ngũ Hành Sơn</option>
                                        <option value="Liên Chiểu">Liên Chiểu</option>
                                        <option value="Hòa Vang">Hòa Vang</option>
                                </select>
                                <select name="area" class="form-control">                                   
                                        <option value="Đà Nẵng">Đà Nẵng</option>
                                        
                                </select>
                                
                            </div>
                            
                            <div class="form-group d-flex ">
                                <input class="form-control mr-4 " style="width: 50%;" type="number" min="10" max="100000000" name="price" placeholder="10000$">
                                <div class="input-group " style="width: 50%; ">
                                    <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                    </div>
                                    <div class="custom-file">
                                    <input type="file" class="custom-file-input"  id="inputGroupFile01" name="fileupload" multiple >
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                    </div>
                                </div> 
                            </div>
                            <div class="form-group">
                                <label for="comment">Mô tả</label>
                                <textarea class="form-control" rows="5" name="description" id="comment"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit"  class="btn btn-primary m-auto d-block w-25">Add</button>
                            </div>    
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>