<div class="container-admin">
        {{> userMenu}}
        <div class="user-content">
            {{> userheader}}
            <div class="user-content-table">
                <div class="content-table-container">
                    <h1 class="content-table-container-header">
                        Cập nhật tài khoản
                    </h1>
                    <form  method="POST" action="user/editUser/{{user._id}}?_method=PUT" enctype="multipart/form-data"  > 
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="edit-user">
                                            <div class="form-group d-flex ">
                                                <input required class="form-control mr-4" type="text" name="username" placeholder="Adress" value="{{user.username}}">
                                            </div>
                                            <div class="form-group d-flex ">
                                                <input class="form-control mr-4" type="number" required name="phone" placeholder="Adress" value="{{user.phone}}">
                                            </div>
                                            <div class="form-group  " >              
                                                <div class="input-group " style="width: 426px; ">
                                                    <div class="input-group-prepend">
                                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                                </div>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input"  id="inputGroupFile01" name="fileupload"  >
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file </label>
                                                </div>
                                            </div> 
                                        </div>
                                        <div class="form-group mt-4">
                                            <button type="submit"  class="btn btn-primary m-auto d-block w-25">Cập nhật</button>
                                        </div> 

                                    </div>
                                </div>
                            </div>
                            
                    </form>
                </div>
            </div>
        </div>
</div>