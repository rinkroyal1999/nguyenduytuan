<div class="container-admin">
        {{> userMenu}}
        <div class="user-content">
            {{> userheader}}
            <div class="user-content-table">
                <div class="content-table-container">
                    <h1 class="content-table-container-header">
                        Cập nhật mật khẩu
                    </h1>
                    <form  method="POST" action="user/editpassword/{{user._id}}?_method=PUT"  > 
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        {{#if error}}
                                            <div class="form-group " style="text-align: center;">
                                            <div class="alert alert-warning alert-dismissible fade show" role="alert" style="display: inline-block; width: 50%;">
                                                <strong>Lỗi   </strong>{{error}}
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        </div>
                                        {{/if}}
                                        <div class="edit-user">
                                            <div class="form-group d-flex ">
                                                <input required class="form-control mr-4" type="password" name="oldpassword" placeholder="Old password" >
                                            </div>
                                            <div class="form-group d-flex ">
                                                <input required class="form-control mr-4" type="password" name="newpassword" placeholder="New Password" >
                                            </div>
                                            <div class="form-group d-flex ">
                                                <input required class="form-control mr-4" type="password" name="confirmpassword" placeholder="Confirm Password">
                                            </div>
                                            
                                        </div>
                                        <div class="form-group mt-4">
                                            <button type="submit"  class="btn btn-primary m-auto d-block w-25">Cập nhật</button>
                                        </div> 

                                    </div>
                                </div>
                            </div>
                            
                    </form>
                </div>
            </div>
        </div>
</div>